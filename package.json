{
  "name": "icloud-notes-linux-client",
  "version": "0.1.2",
  "author": "Jason Huang <jasonh3308@gmail.com>",
  "description": "iCloud Note Linux Client, 3rd party",
  "homepage": "http://squashme.biz/icloud-notes-linux-client",
  "private": true,
  "main": "app/main.js",
  "scripts": {
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "clean": "rm -rf dist",
    "dist": "webpack --config=build/webpack.app.config.js --mode=production && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "css-loader": "^0.28.11",
    "electron": "^1.8.4",
    "electron-builder": "^20.10.0",
    "electron-mocha": "^6.0.2",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^5.1.1",
    "source-map-support": "^0.5.5",
    "spectron": "^3.8.0",
    "style-loader": "^0.20.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-merge": "^4.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "build": {
    "appId": "biz.squashme.inotelinuxclient",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "app/assets"
    },
    "linux": {
      "target": [
        "snap"
      ],
      "icon": "icon-512x512.png",
      "category": "Network;TextTools;Office;GTK;GNOME"
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable",
      "summary": "iCloud Notes Linux Client"
    },
    "deb": {
      "icon": "app/assets/icon-512x512.png",
      "category": "Network;TextTools;Office;GTK;GNOME"
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "electron-window-state": "^4.1.1",
    "fs-jetpack": "^1.3.0",
    "loglevel": "^1.6.1",
    "wurl": "^2.5.3"
  }
}
